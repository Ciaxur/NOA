{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",

        "allowJs": true,
        "checkJs": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        
        "outDir": "out/"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]

}